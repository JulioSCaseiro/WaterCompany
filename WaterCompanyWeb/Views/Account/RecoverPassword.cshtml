@model WaterCompanyWeb.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = "~/Views/Account/_AuthLayout.cshtml";
}
<link rel="stylesheet" href="~/css/login.css" />

        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

                <input type="submit" value="Recover password" class="w-100 btn btn-lg btn-primary" />
        </form>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }