@model WaterCompanyWeb.Models.WaterMeterViewModel

<div class="form-group">
    <label asp-for="ClientId" class="control-label"></label>
    <select asp-for="ClientId" asp-items="Model.Clients" class=" form-control"></select>
    <span asp-validation-for="ClientId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ConsumptionDate" class="control-label"></label>
    <input asp-for="ConsumptionDate" class="form-control">
    <span asp-validation-for="ConsumptionDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Value" class="control-label" disabled></label>
    <input asp-for="Value" class="form-control" disabled />
    <span asp-validation-for="Value" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TotalConsumption" class="control-label"></label>
    <input asp-for="TotalConsumption" class="form-control" />
    <span asp-validation-for="TotalConsumption" class="text-danger"></span>
</div>