@model WaterCompanyWeb.Data.Entities.Invoice

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Invoice?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-3">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button action="Delete" asp-for="Id" class="btn"><i class="fas fa-trash-alt fa-lg" style="color: #9A8174;"></i> Delete</button> @*DELETE BUTTON*@
        <a asp-action="Index" class="btn"><i class="fa fa-rotate-left fa-lg" style="color: #9A8174;"></i> Return</a> @*RETURN BUTTON*@
    </form>
</div>

